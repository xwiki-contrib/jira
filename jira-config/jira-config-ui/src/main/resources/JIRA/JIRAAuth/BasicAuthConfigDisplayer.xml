#set ($basicAuthClass = 'JIRA.JIRAAuth.BasicAuthClass')
#set ($confDoc = $xwiki.getDocument('JIRA.JIRAAuth.BasicAuthConfiguration'))
#set ($confObjects = $confDoc.getObjects($basicAuthClass))
#if ($xcontext.action == 'get')
  #if ($request.getParameter('save') == 'true')
    ## Save the changes
    #if ($services.csrf.isTokenValid($!request.form_token))
      #foreach ($obj in $confObjects)
        #set ($formIdFieldName = "${basicAuthClass}_${obj.number}_id")
        #set ($formUsernameFieldName = "${basicAuthClass}_${obj.number}_username")
        #set ($formPwdFieldName = "${basicAuthClass}_${obj.number}_password")
        #set ($formIdValue = $request.getParameter($formIdFieldName))
        #set ($formUsernameValue = $request.getParameter($formUsernameFieldName))
        #set ($formPwdValue = $request.getParameter($formPwdFieldName))
        #if ($formIdValue != $NULL &amp;&amp; $formUsernameValue != $NULL &amp;&amp; $formPwdValue != $NULL)
          #set ($discard = $obj.set('id', $formIdValue))
          #set ($discard = $obj.set('username', $formUsernameValue))
          #set ($discard = $obj.set('password', $formPwdValue))
        #else
          ## Seem that the object is not any more in the form, so drop it
          #set ($discard = $confDoc.removeObject($obj))
        #end
      #end
      #set ($discard = $confDoc.save())
    #else
      #set($discard = $response.setStatus(403))
      #jsonResponse({"error": "Invalid CSRF token"})
    #end
  #else
    ## Show the content
    #set ($configId = $request.id)
    #set ($confObj = $NULL)
    #foreach ($o in $confObjects)
      #if ($o.getValue('id') == $configId)
        #set ($confObj = $o)
      #end
    #end
    #if ($confObj == $NULL)
      #set ($confObj = $confDoc.newObject($basicAuthClass))
      #set ($discard = $confObj.set('id', $configId))
      #set ($discard = $confDoc.save())
    #end
    $confObj.display('id', 'hidden')

    {{html clean="false"}}
    &lt;dl&gt;
      &lt;dt&gt;
        &lt;label for="${basicAuthClass}_${confObj.number}_username"&gt;$services.localization.render('jira.config.auth.basicAuth.username', 'html/5.0')&lt;/label&gt;
      &lt;/dt&gt;
      &lt;dd&gt;
        {{/html}}

        $confObj.display('username', 'edit')

        {{html clean="false"}}
      &lt;/dd&gt;
      &lt;dt&gt;
        &lt;label for="${basicAuthClass}_${confObj.number}_password"&gt;$services.localization.render('jira.config.auth.basicAuth.password', 'html/5.0')&lt;/label&gt;
      &lt;/dt&gt;
      &lt;dd&gt;
        {{/html}}

        $confObj.display('password', 'edit')

        {{html clean="false"}}
      &lt;/dd&gt;
    &lt;/dl&gt;
    {{/html}}
  #end
#end
{{/velocity}}</content>
