<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.commons</groupId>
    <artifactId>xwiki-commons-pom</artifactId>
    <version>3.3-milestone-1</version>
  </parent>
  <groupId>org.xwiki.contrib</groupId>
  <artifactId>macro-jira</artifactId>
  <version>1.0</version>
  <name>Jira Macro</name>
  <packaging>xar</packaging>
  <description>Extracts information from JIRA and presents it to the user in a nice and customizable way</description>
  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/macro-jira.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/macro-jira.git</developerConnection>
    <url>https://github.com/xwiki-contrib/macro-jira</url>
  </scm>
  <properties>
    <!-- Don't run CLIRR here since there's no Java code. -->
    <xwiki.clirr.skip>true</xwiki.clirr.skip>
  </properties>
  <build>
    <!-- Needed to add support for the XAR packaging -->
    <extensions>
      <extension>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-handlers</artifactId>
        <version>${commons.version}</version>
      </extension>
    </extensions>
  </build>
</project>
